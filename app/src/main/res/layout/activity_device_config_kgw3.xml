<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue_0188cc">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onBack"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings for  Device"
            android:textColor="@color/white_ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_f2f2f2"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_ffffff"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:onClick="onNetworkSettings"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/network_settings"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:onClick="onMqttSettings"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/mqtt_settings"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:onClick="onNtpSettings"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/ntp_timezone"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvScannerFilter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:onClick="onScannerFilter"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/scanner_filter"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvScanAndUpload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:onClick="onScanAndUpload"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/scan_and_upload"
                android:textColor="@color/black_333333"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvAdvIbeacon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:onClick="onAdvertiseIBeacon"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/advertise_iBeacon"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAdvSettings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:onClick="onAdvSettings"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/advertise_settings"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white_ffffff"
                android:clickable="true"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:onClick="onDeviceInfo"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/device_information"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Please note the network settings and MQTT settings are required, the other settings are optional."
                android:textColor="@color/black_333333"
                android:textSize="13sp"
                android:visibility="gone" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="53dp"
                android:background="@drawable/shape_corner_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onConnect"
                android:text="Connect"
                android:textColor="@color/white_ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>